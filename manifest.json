{
  "manifest_version" : 2,
  "name" : "Networking Tool",
  "version" : "1.0",
  "description" : "Network Easily",
  "icons" : {
    "128" : "img/handshake128.png",
    "16" : "img/handshake16.png"
  },
  "browser_action" : {
    "default_icon" : "img/handshake128.png",
    "default_popup" : "popup.html"
  },
  "background": {
    "scripts": ["bundle.js"]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}